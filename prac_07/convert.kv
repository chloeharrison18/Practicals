BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: text_input
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.handle_invalid_inputs()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 30
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 30
                on_press: app.handle_increment(-1)
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Convert m to km'
            font_size: 30
            on_press: app.handle_calculate()
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: output_label
            color: (1, 1, 0, 1)
            font_size: 48
